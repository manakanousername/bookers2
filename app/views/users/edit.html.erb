<h2>User info</h2>
<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <label for="inputName">Name</label>
  <%= form.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Image</label>
  <%= form.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= form.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introdction"%>
  <%= form.submit "Update User" %>
<% end %>