  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h1>
        <%= image_tag @user.get_profile_image %>
        <h4>name  <%= @user.name %></h4>
        <h4>introduction  <%= @user.introduction %></h4>
        <%= link_to  "edit", edit_user_path(@user) %>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Option</p>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book' %>
      <% end %>
      <div class ="col-md-8 offset-md-1">
         <h1>Books</h1>
      </div>

    </div>
  </div>