<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<h2>Book detail</h2>


<% @books.each do |book| %>
  <div>
    <p><%= book.user.name %></p>
    <p><%= book.title %></p>
    <p><%= book.body %></p>

  </div>
<% end %>
